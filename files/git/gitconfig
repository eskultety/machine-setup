[user]
    name = Erik Skultety

[color]
    ui = auto
    diff = auto

[alias]
    # short command aliases
    br = branch
    ci = commit
    co = checkout
    cp = cherry-pick
    ds = describe
    fp = format-patch
    mg = merge
    pl = pull
    rb = rebase
    st = status

    # more sophisticated aliases
    added = log --diff-filter=A
    alias = config --get-regexp alias
    deleted = log --diff-filter=D
    line = log --pickaxe-all -G
    mgt = mergetool
    mr = "!func() { git fetch origin merge-requests/$1/head && git checkout FETCH_HEAD; }; func"
    mine = log --author=Skultety
    root = rev-parse --show-toplevel
    visual = tig
    vimdiff = !env GIT_EXTERNAL_DIFF=vimgitdiff git --no-pager diff

[format]
    pretty = fuller
    numbered = auto
    thread = shallow
    coverLetter = auto

[merge]
    tool = vimdiff
    guitool = meld

[mergetool "meld"]
    cmd = meld "$LOCAL" "$BACKUP" "$REMOTE" --output "$MERGED"

[diff]
    renames = true
    algorithm = patience

[core]
    excludesfile = ~/.gitignore

[grep]
    patternType = extended

[am]
    threeWay = true

[rebase]
    abbreviateCommands = true
    stat = true
